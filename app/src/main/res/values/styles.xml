<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">@dimen/slide_menu_item_height</item><!-- menu item height -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HintTextAppearance">
        <item name="android:textColor">@drawable/hint_toggle_selector</item>
        <item name="android:textSize">@dimen/text_size_super_small</item>
    </style>

    <style name="HintTextFocusAppearance">
        <item name="android:textColor">@drawable/hint_toggle_focus_selector</item>
        <item name="android:textSize">@dimen/text_size_super_small</item>
    </style>

    <style name="HintTextErrorAppearance">
        <item name="android:textColor">@drawable/hint_toggle_error_selector</item>
        <item name="android:textSize">@dimen/text_size_super_small</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:paddingLeft">@dimen/left_right_padding</item>
        <item name="android:paddingRight">@dimen/left_right_padding</item>
        <item name="android:paddingTop">@dimen/button_padding_top</item>
        <item name="android:paddingBottom">@dimen/button_padding_top</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size</item>
        <!--        <item name="android:textAllCaps">false</item>-->
    </style>

    <style name="ButtonDialogStyle"  parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:paddingLeft">@dimen/button_margin</item>
        <item name="android:paddingRight">@dimen/button_margin</item>
        <item name="android:paddingTop">@dimen/button_padding_top</item>
        <item name="android:paddingBottom">@dimen/button_padding_top</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="NormalText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>

    <style name="SmallText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_small_10</item>
        <item name="android:paddingTop">@dimen/normal_padding</item>
        <item name="android:paddingBottom">@dimen/normal_padding</item>
        <item name="android:paddingLeft">@dimen/fab_margin</item>
        <item name="android:paddingRight">@dimen/fab_margin</item>
    </style>

    <!-- filter popup style -->
    <style name="FilterHintTextAppearance">
        <item name="android:textColor">@drawable/hint_toggle_selector</item>
        <item name="android:textSize">@dimen/text_size_super_small</item>
    </style>

    <style name="FilterHintTextFocusAppearance">
        <item name="android:textColor">@drawable/hint_toggle_focus_selector</item>
        <item name="android:textSize">@dimen/text_size_super_small</item>
    </style>

    <style name="SlideMenuTextViewItem">
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ShapeAppearanceOverlay.Nav" parent="">
        <!--        <item name="cornerFamily">rounded</item>-->
        <!--        <item name="cornerSize">8dp</item>-->
        <!--        <item name="android:layout_margin">@dimen/normal_padding</item>-->
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ToolbarTitleTextStyle">
        <item name="android:color">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:padding">@dimen/country_gap</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="@style/AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorDarkBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>

        <!--        <item name="android:windowIsFloating">false</item>-->

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/colorTransparent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/colorWhite</item>
        <item name="itemIconTint">@drawable/bottom_nav_icon_selector</item>
        <!--        <item name="itemTextColor">@drawable/bottom_nav_icon_selector</item>-->
        <item name="paddingStart">@dimen/normal_padding</item>
        <item name="paddingEnd">@dimen/normal_padding</item>
        <item name="android:paddingTop">@dimen/normal_padding</item>
        <item name="android:paddingBottom">@dimen/normal_padding</item>
        <item name="android:theme">@style/Widget.BottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigation.TextStyleActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigation.TextStyleInactive</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/text_size</item>
        <!--        <item name="fontFamily">@font/your_font</item>-->
    </style>

    <style name="BottomNavigation.TextStyleActive">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorLightBlue</item>
    </style>
    <style name="BottomNavigation.TextStyleInactive">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorTextNormal</item>
    </style>
</resources>
