<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/country_gap"
    android:layout_marginRight="@dimen/country_gap"
    android:layout_marginTop="@dimen/normal_padding"
    android:layout_marginBottom="@dimen/normal_padding"
    android:background="@drawable/item_border_layout"
    android:padding="@dimen/country_gap">
    <TextView
        android:id="@+id/emailTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/roleTv"
        style="@style/NormalText"
        android:textColor="@color/colorTextNormal"
        android:layout_marginRight="@dimen/normal_padding"/>
    <TextView
        android:id="@+id/roleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/emailTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/SmallText"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/displayName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTv"
        style="@style/NormalText"
        android:textColor="@color/colorTextNormal"
        android:layout_marginTop="@dimen/normal_padding"/>
</androidx.constraintlayout.widget.ConstraintLayout>
