<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:fitsSystemWindows="false"
    android:minHeight="?attr/actionBarSize"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@color/colorDarkBlue"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:titleTextColor="@color/colorWhite"
    android:textDirection="ltr"
    android:layoutDirection="ltr"
    android:layout_marginTop="@dimen/appBarTopMargin"
    android:paddingTop="@dimen/country_gap"
    android:paddingLeft="@dimen/normal_padding"
    android:paddingRight="@dimen/normal_padding"
    android:paddingBottom="@dimen/normal_padding"
    android:elevation="@dimen/appBarTopMargin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toolbarTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ToolbarTitleTextStyle"
            android:textSize="@dimen/text_size_normal"
            android:fontFamily="@font/montserrat_semibold"
            android:visibility="gone"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/backIcn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal_padding"
            android:layout_marginLeft="@dimen/country_gap"
            android:padding="@dimen/shadow_padding"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorWhite"/>
        <ImageView
            android:id="@+id/toolbarImgv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:paddingTop="@dimen/normal_padding"
            android:paddingBottom="@dimen/normal_padding"
            android:layout_toRightOf="@+id/backIcn"/>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>
